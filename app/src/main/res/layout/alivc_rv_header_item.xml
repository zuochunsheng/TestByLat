<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/alivc_common_padding_12"
    android:background="@color/alivc_common_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/alivc_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/alivc_common_padding_10"
        android:textColor="@color/alivc_common_font_black"
        android:textSize="@dimen/alivc_common_font_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alivc_tv_more_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/alivc_common_padding_14"
        android:text="@string/alivc_longvideo_more_content"
        android:visibility="gone"
        android:textColor="@color/alivc_longvideo_font_more"
        android:textSize="@dimen/alivc_common_font_13" />


</LinearLayout>